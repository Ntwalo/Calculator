<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="600" Width="400">
    <Grid>
        <TextBox Name="Display" FontSize="36" Height="70" VerticalAlignment="Top"
                 HorizontalAlignment="Stretch" TextAlignment="Right" IsReadOnly="True"/>
        <Grid Margin="0,80,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Number Buttons -->
            <Button Content="7" FontSize="32" Width="100" Height="80" Grid.Row="0" Grid.Column="0" Click="Button_Click"/>
            <Button Content="8" FontSize="32" Width="100" Height="80" Grid.Row="0" Grid.Column="1" Click="Button_Click"/>
            <Button Content="9" FontSize="32" Width="100" Height="80" Grid.Row="0" Grid.Column="2" Click="Button_Click"/>
            <Button Content="/" FontSize="32" Width="100" Height="80" Grid.Row="0" Grid.Column="3" Click="Button_Click"/>

            <Button Content="4" FontSize="32" Width="100" Height="80" Grid.Row="1" Grid.Column="0" Click="Button_Click"/>
            <Button Content="5" FontSize="32" Width="100" Height="80" Grid.Row="1" Grid.Column="1" Click="Button_Click"/>
            <Button Content="6" FontSize="32" Width="100" Height="80" Grid.Row="1" Grid.Column="2" Click="Button_Click"/>
            <Button Content="*" FontSize="32" Width="100" Height="80" Grid.Row="1" Grid.Column="3" Click="Button_Click"/>

            <Button Content="1" FontSize="32" Width="100" Height="80" Grid.Row="2" Grid.Column="0" Click="Button_Click"/>
            <Button Content="2" FontSize="32" Width="100" Height="80" Grid.Row="2" Grid.Column="1" Click="Button_Click"/>
            <Button Content="3" FontSize="32" Width="100" Height="80" Grid.Row="2" Grid.Column="2" Click="Button_Click"/>
            <Button Content="-" FontSize="32" Width="100" Height="80" Grid.Row="2" Grid.Column="3" Click="Button_Click"/>

            <Button Content="0" FontSize="32" Width="100" Height="80" Grid.Row="3" Grid.Column="0" Click="Button_Click"/>
            <Button Content="C" FontSize="32" Width="100" Height="80" Grid.Row="3" Grid.Column="1" Click="Clear_Click"/>
            <Button Content="=" FontSize="32" Width="100" Height="80" Grid.Row="3" Grid.Column="2" Click="Equals_Click"/>
            <Button Content="+" FontSize="32" Width="100" Height="80" Grid.Row="3" Grid.Column="3" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
